# Use a slim Python image for a smaller footprint
FROM python:3.9-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
WORKDIR /app

# Install only essential system dependencies for audio processing
RUN apt-get update && apt-get install -y --no-install-recommends \
    libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-prod.txt .
RUN pip install --default-timeout=1000 --no-cache-dir -r requirements-prod.txt

# Copy application files
COPY src/ ./src/
COPY outputs/ ./outputs/
COPY .streamlit/ ./.streamlit/
COPY users.json* .

# Hugging Face Spaces uses port 7860
EXPOSE 7860

# Run the application on port 7860
CMD ["streamlit", "run", "src/frontend.py", "--server.address=0.0.0.0", "--server.port=7860"]
